<% if @identities %>
  <% unless @identities.empty? %>
    <p><strong>You can sign in to this account using:</strong></p>
    <div class="identities clearfix">
      <% @identities.each do |identity| %>
        <div class="identity">
          <%= image_tag "#{identity.provider}_32.png", :size => "32x32" %>
          <div class="provider"><%= identity.provider.titleize %></div>
          <div class="uid"><%= identity.uid %></div>
          <%= link_to "X", identity, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove" %>
        </div>
      <% end %>

    </div>
  <% end %>
  <p><strong>Add another service to sign in with:</strong></p>
<% else %>
  <p><strong>Sign in through one of these services:</strong></p>
<% end %>

<p><%= render 'shared/omniauth_links' %></p>
